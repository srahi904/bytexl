// server.js
const express = require("express");
const jwt = require("jsonwebtoken");

const app = express();
app.use(express.json());

// ========================== CONFIG ==========================
const SECRET_KEY = "supersecretkey123"; // JWT signing secret
let userAccount = {
  username: "rahi",
  password: "pass123",
  balance: 1000
};

// ==================== LOGIN ROUTE (Public) ====================
app.post("/login", (req, res) => {
  const { username, password } = req.body;

  if (username !== userAccount.username || password !== userAccount.password) {
    return res.status(401).json({ error: "Invalid credentials" });
  }

  // Create a JWT token valid for 1 hour
  const token = jwt.sign({ username }, SECRET_KEY, { expiresIn: "1h" });

  res.json({ message: "Login successful", token });
});

// ================= JWT AUTH MIDDLEWARE =================
function verifyToken(req, res, next) {
  const authHeader = req.headers["authorization"];
  if (!authHeader)
    return res.status(401).json({ error: "Authorization header missing" });

  const token = authHeader.split(" ")[1]; // Format: Bearer <token>
  if (!token) return res.status(401).json({ error: "Token missing" });

  jwt.verify(token, SECRET_KEY, (err, decoded) => {
    if (err) return res.status(403).json({ error: "Invalid or expired token" });

    req.user = decoded; // attach decoded payload
    next();
  });
}

// ================== BANKING ROUTES (Protected) ==================

// 1ï¸âƒ£ Check Balance
app.get("/balance", verifyToken, (req, res) => {
  res.json({ username: req.user.username, balance: userAccount.balance });
});

// 2ï¸âƒ£ Deposit Money
app.post("/deposit", verifyToken, (req, res) => {
  const { amount } = req.body;
  if (!amount || amount <= 0)
    return res.status(400).json({ error: "Invalid deposit amount" });

  userAccount.balance += amount;
  res.json({ message: "Deposit successful", newBalance: userAccount.balance });
});

// 3ï¸âƒ£ Withdraw Money
app.post("/withdraw", verifyToken, (req, res) => {
  const { amount } = req.body;
  if (!amount || amount <= 0)
    return res.status(400).json({ error: "Invalid withdrawal amount" });

  if (userAccount.balance < amount)
    return res.status(400).json({ error: "Insufficient balance" });

  userAccount.balance -= amount;
  res.json({ message: "Withdrawal successful", newBalance: userAccount.balance });
});

// Root route
app.get("/", (req, res) => {
  res.send("Banking API is running ðŸš€");
});

